<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Create Account - Aquatic Durable Project</title>
    <style>
      /* Aquatic Durable Project styles */
      body {
        font-family: Arial, sans-serif;
        background-color: #aee7ff; /* Light blue resembling water */
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      .container {
        width: 350px;
        padding: 20px;
        border-radius: 8px;
        background-color: #ffffff; /* White container */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #004d99; /* Dark blue for headings */
      }

      form {
        display: flex;
        flex-direction: column;
      }

      .form-group {
        margin-bottom: 15px;
      }

      label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
        color: #004d99; /* Dark blue for labels */
      }

      input[type="text"],
      input[type="email"],
      input[type="password"],
      input[type="submit"] {
        width: 96%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
      }

      input[type="submit"] {
        background-color: #008cba; /* Blue-green color for submit button */
        color: white;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      input[type="submit"]:hover {
        background-color: #00546b; /* Darker shade on hover */
      }
    </style>
  </head>

  <body>
    <form class="container" onsubmit="event.preventDefault(); createAcount()">
      <form action="#">
        <h2>Create Account - Aquatic Durable Project</h2>
        <div class="form-group">
          <label for="firstname">First Name:</label>
          <input type="text" id="first_name" name="firstname" required />
        </div>
        <div class="form-group">
          <label for="lastname">Last Name:</label>
          <input type="text" id="last_name" name="lastname" required />
        </div>
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" required />
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" required />
        </div>
        <div style="margin-right: -21px">
          <input type="submit" value="Create Account" />
        </div>
      </form>
    </form>

    <script>
      function createAcount() {
        let user = {
          email: email.value,
          password: password.value,
          first_name: first_name.value,
          last_name: last_name.value,
        };

        fetch("/addAcount", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(user),
        })
          .then((response) => {
            console.log(response);
            if (response.ok) {
              window.location.href = "/"; // Redirect to the specified URL
            }
          })
          .catch((error) => {
            // Handle any errors
            console.error("Error:", error);
          });
      }
    </script>
  </body>
</html>
